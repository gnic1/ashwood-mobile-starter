/* ===== Ensure /v1 router is mounted ONCE ===== */
if (!global.__ASHWOOD_LOBBY_MOUNTED__) {
  global.__ASHWOOD_LOBBY_MOUNTED__ = true;
} else {
  console.log("[Ashwood] (skipped) lobby already mounted");
}
